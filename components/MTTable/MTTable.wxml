<scroll-view class="mt-table_scroll  {{border ?'mt-table-border':''}}" bindscroll=" _tableScroll" scroll-y scroll-x style="{{maxHeight != '0' ? 'max-height: ' + maxHeight + 'rpx;' : ''}}">
	<!--解决scroll-view的sticky失效的问题(导致表头和固定列消失的问题),需要整体包裹一个view -->
	<view class="mt-table-component-view" style="width: {{totalWidth}}rpx;">
		<!--表头 -->
		<view wx:if="{{config.length}}" class="mt-header">
			<view wx:for="{{config}}" wx:key="index" style="{{index==0&&left?'position:sticky;left:0;':''}} background-color:{{headbgColor}};text-align:{{align}};width:{{item.width}};flex-grow:{{item.width ? 'none' : '1'}}" class="mt-header-column mt-header-font mt-header-font-outer {{border?'mt-header-column-border':''}}">
				{{item.label}}
			</view>
		</view>
		<!-- 表体 -->
		<view wx:for="{{tableData}}" class="mt-table-tr mt-table-tr-stripe-outer {{stripe ? 'mt-table-tr-stripe' : ''}}" wx:for-index="index" wx:for-item="tableItem" wx:key="index" data-item="{{tableItem}}" bind:tap="_rowClick">
			<view wx:for="{{config}}" wx:for-index="configIndex" wx:key="configIndex" class="mt-table-td-cell {{showOverflowTooltip ? 'mt-table-td-cell-text-ellipsis':''}}  {{border?'mt-table-td-cell-border':''}} {{hasPadding ? 'mt-table-td-cell-padding':''}} " wx:for-item="configItem" style="{{configIndex==0&&left?'position:sticky;left:0;':''}}width:{{config[configIndex]['width']}};flex-grow:{{config[configIndex]['width']? 'none' : '1'}}">
				<slot name="tr-{{index}}td-{{configIndex+1}}"></slot>
			</view>
		</view>
	</view>
</scroll-view>